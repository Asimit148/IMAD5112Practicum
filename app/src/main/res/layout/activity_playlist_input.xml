<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistInput">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fill in the contents"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#050505"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputSongTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter the title of the song."
        android:padding="12dp"
        android:backgroundTint="#D1D5DB"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inpuArtistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Name of the Artist"
        android:padding="12dp"
        android:backgroundTint="#D1D5DB"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/inputSongTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputRatings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter the rating of the song."
        android:padding="12dp"
        android:inputType="number"
        android:backgroundTint="#D1D5DB"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/inpuArtistName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/inputUserComments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Activity Notes"
        android:padding="12dp"
        android:backgroundTint="#D1D5DB"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/inputRatings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add to List"
        android:textColor="#FFFFFF"
        android:backgroundTint="#673AB7"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="64dp"
        app:layout_constraintTop_toBottomOf="@id/inputUserComments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to Display Screen"
        android:textColor="#FFFFFF"
        android:backgroundTint="#673AB7"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="64dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clear Contents"
        android:textColor="#FFFFFF"
        android:backgroundTint="#673AB7"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="64dp"
        app:layout_constraintTop_toBottomOf="@id/buttonView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exit App"
        android:textColor="#FFFFFF"
        android:backgroundTint="#673AB7"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="64dp"
        app:layout_constraintTop_toBottomOf="@id/buttonClear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>